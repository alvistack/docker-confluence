{
  "builders": [
    {
      "changes": [
        "ENV LANG en_US.UTF-8",
        "ENV LC_ALL en_US.UTF-8",
        "ENV SHELL /bin/bash",
        "ENV TZ UTC",
        "ENV CONFLUENCE_OWNER confluence",
        "ENV CONFLUENCE_GROUP confluence",
        "ENV CONFLUENCE_HOME /var/atlassian/application-data/confluence",
        "ENV CONFLUENCE_CATALINA /opt/atlassian/confluence",
        "ENV PATH $PATH:$CONFLUENCE_CATALINA/bin",
        "VOLUME $CONFLUENCE_HOME",
        "WORKDIR $CONFLUENCE_HOME",
        "EXPOSE 8000",
        "EXPOSE 8090",
        "ENTRYPOINT [\"catatonit\", \"-g\", \"--\", \"docker-entrypoint.sh\"]",
        "CMD [\"start-confluence.sh\", \"-fg\"]"
      ],
      "commit": true,
      "image": "ubuntu:20.04",
      "type": "docker"
    }
  ],
  "post-processors": [
    {
      "inline": [
        "set -eu",
        "mkdir -p output-docker"
      ],
      "type": "shell-local"
    },
    {
      "path": "output-docker/image.tar",
      "type": "docker-save"
    },
    {
      "compression_level": 9,
      "format": ".gz",
      "keep_input_artifact": true,
      "output": "output-docker/image.tar.gz",
      "type": "compress"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "set -eu",
        "apt-get update",
        "DEBIAN_FRONTEND=noninteractive apt-get dist-upgrade -y",
        "DEBIAN_FRONTEND=noninteractive apt-get install -y ca-certificates curl gcc iproute2 python3 python3-dev sudo"
      ],
      "type": "shell"
    },
    {
      "galaxy_file": "./ansible-galaxy-requirements.yml",
      "inventory_directory": "./",
      "playbook_file": "./packer.yml",
      "type": "ansible",
      "user": "root"
    }
  ]
}

